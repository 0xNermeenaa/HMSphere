@model HMSphere.MVC.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}
<section class="container form animated flipInX">
    <legend>Hospital Registration</legend>
    <form asp-action="Register" method="post">
        @Html.AntiForgeryToken()

        <!-- First Name Field -->
        <div class="form-group">
            <label asp-for="FirstName" class="control-label mt-4"></label>
            <input asp-for="FirstName" class="form-control" placeholder="Enter your first name" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <!-- Last Name Field -->
        <div class="form-group">
            <label asp-for="LastName" class="control-label mt-4"></label>
            <input asp-for="LastName" class="form-control" placeholder="Enter your last name" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <!-- National ID Field -->
        <div class="form-group">
            <label asp-for="NID" class="control-label mt-4"></label>
            <input asp-for="NID" class="form-control" placeholder="Enter your national ID" />
            <span asp-validation-for="NID" class="text-danger"></span>
        </div>

        <!-- Password Field -->
        <div class="form-group">
            <label asp-for="Password" class="control-label mt-4"></label>
            <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <!-- Gender Field -->
        <div class="form-group">
            <label asp-for="Gender" class="control-label mt-4"></label>
            <select asp-for="Gender" class="form-control">
                <option value="">Select Gender</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
                <option value="other">Other</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <!-- Phone Number Field -->
        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label mt-4"></label>
            <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <!-- Email Field -->
        <div class="form-group">
            <label asp-for="Email" class="control-label mt-4"></label>
            <input asp-for="Email" class="form-control" type="email" placeholder="Enter your email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- Address Field -->
        <div class="form-group">
            <label asp-for="Address" class="control-label mt-4"></label>
            <textarea asp-for="Address" class="form-control" rows="3" placeholder="Enter your address"></textarea>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <!-- Submit Button -->
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>

        <!-- Display Server-side Errors -->
        @if (ViewData.ModelState[""]?.Errors.Count > 0)
        {
            <div class="alert alert-danger">
                @ViewData.ModelState[""]?.Errors[0].ErrorMessage
            </div>
        }
    </form>
</section>

<style>
    body {
        font-family: Arial, sans-serif;
        background-image: url("https://i.pinimg.com/564x/5b/32/69/5b326928a380586eac8dcd72d1b774e7.jpg");
        background-size: 100% 100%;
        background-repeat: no-repeat;
        background-attachment: fixed;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 500px;
        margin: 50px auto;
        background-color: rgba(255, 255, 255, 0.9);
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 5px;
    }

    h2 {
        text-align: center;
        color: #333;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
        color: #333;
    }

    input[type="text"], input[type="number"], input[type="email"], input[type="password"], select, textarea {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
    }

    textarea {
        resize: vertical;
    }

    .btn {
        display: block;
        width: 100%;
        padding: 10px;
        background-color: #2fa4e7;
        color: #fff;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
    }

        .btn:hover {
            background-color: #2c94d1;
        }
</style>

@section Scripts {
    <!-- Include validation script for client-side validation -->
    <partial name="_ValidationScriptsPartial" />
}
