@model HMSphere.MVC.ViewModels.LoginViewModel
@{
    Layout = "_AccountLayout.cshtml";
    ViewData["Title"] = "Log in";
}
<section class="form animated flipInX">
    <legend>Login To Your Account</legend>
    <form asp-action="SaveLogin" method="post">
        @Html.AntiForgeryToken()

        <!-- Email Field -->
        <div class="form-group">
            <label asp-for="Email" class="control-label mt-4"></label>
            <input asp-for="Email" class="form-control" type="email" placeholder="Enter your email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- Password Field -->
        <div class="form-group">
            <label asp-for="Password" class="control-label mt-4"></label>
            <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>

        <!-- Display Server-side Errors -->
        @if (ViewData.ModelState[""]?.Errors.Count > 0)
        {
            <div class="alert alert-danger">
                @ViewData.ModelState[""]?.Errors[0].ErrorMessage
            </div>
        }

    </form>
</section>

<style>
    body {
        background-image: url("https://i.pinimg.com/564x/5b/32/69/5b326928a380586eac8dcd72d1b774e7.jpg");
        background-repeat: no-repeat;
        background-size: cover;
        font-family: "Roboto", sans-serif;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    .form {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: #fff;
        width: 350px;
        padding: 40px;
        box-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
    }

        .form h2 {
            margin: 0 0 20px;
            line-height: 1;
            color: #44c4e7;
            font-size: 18px;
            font-weight: 400;
        }

    input {
        outline: none;
        width: 100%;
        margin-bottom: 20px;
        padding: 10px 15px;
        border: 1px solid #ccc;
        color: #333;
        font-family: "Roboto", sans-serif;
        box-sizing: border-box;
        font-size: 14px;
        transition: 0.2s linear;
    }

        input:focus {
            border-color: #44c4e7;
        }

    button {
        cursor: pointer;
        background: #44c4e7;
        width: 100%;
        padding: 10px 15px;
        border: 0;
        color: #fff;
        font-family: "Roboto", sans-serif;
        font-size: 14px;
        transition: background 0.2s;
    }

        button:hover {
            background: #369cb8;
        }
</style>

@section Scripts {
    <!-- Include validation script for client-side validation -->
    <partial name="_ValidationScriptsPartial" />
}
